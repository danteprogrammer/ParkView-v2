<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".dashboard">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/header_background_image"
        android:orientation="vertical"
        android:padding="@dimen/margin_standard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                app:layout_constraintBottom_toBottomOf="@id/logo_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/logo_image"
                app:tint="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:text="Bienvenido\nRodrigo"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large_title"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/options_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/card_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="@dimen/padding_standard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Escoge una opción"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_background_blue"
                android:text="Guardar ubicación"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_see_car"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_background_blue"
                android:text="Ver mi auto"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_see_cameras"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_background_blue"
                android:text="Ver cámaras"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                />
        </LinearLayout>

        <!-- Sección del Temporizador (SOLO CRONÓMETRO) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent" >

            <TextView
                android:id="@+id/tv_limit_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" android:text="Tiempo restante:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tv_countdown_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" android:textColor="#0B6CF3"
                android:textSize="36sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="15:30"
                tools:visibility="visible"/>

        </LinearLayout>
        <!-- Fin Sección del Temporizador -->


        <!-- Sección de Detalles Apilados (UBICACIÓN, HORA DE REGISTRO, VENCIMIENTO) -->
        <LinearLayout
            android:id="@+id/last_location_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <!-- 1. ÚLTIMA UBICACIÓN y HORA DE REGISTRO (Manejado por Kotlin en una sola vista) -->
            <TextView
                android:id="@+id/last_location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay ubicación guardada"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />

            <!-- 2. VENCIMIENTO (Ahora usa el mismo tamaño de texto) -->
            <TextView
                android:id="@+id/tv_limit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone"
                tools:text="Vencimiento: 6:30 PM"
                tools:visibility="visible"/>

        </LinearLayout>
        <!-- Fin Sección de Detalles Apilados -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>